<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundc"
    tools:context="tools:context=broadcaster.niit.org.yuva.MyRecyclerViewAdapter"

    >



    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        card_view:cardBackgroundColor="#FFFFFF"
        card_view:cardCornerRadius="10dp"


        >
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"

            >
            <TextView
                android:id="@+id/textViewHead_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold" android:text="NameHead"
                android:layout_alignParentTop="true" />
            <TextView
                android:id="@+id/textView_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"  android:text="Name"
                android:maxLines="1"
                android:maxLength="30"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="120dp" />

            <TextView
                android:id="@+id/textViewHead_Desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="10dp" android:text="DescHead"
                android:layout_below="@+id/textViewHead_Name" />
            <TextView
                android:id="@+id/textView_Desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:maxLines="1"
                android:maxLength="30"
                android:text="Desc"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="120dp"
                android:layout_below="@+id/textView_Name"
                />

            <TextView
                android:id="@+id/textViewHead_No_Of_Vacancy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="10dp" android:text="NOVHead"
                android:layout_below="@+id/textViewHead_Desc" />
            <TextView
                android:id="@+id/textView_No_Of_Vacancy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:maxLines="1"
                android:maxLength="30"
                android:text="NOV"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="120dp"
                android:layout_below="@+id/textView_Desc"
                />


            <TextView
                android:id="@+id/textViewHead_date_interview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="10dp" android:text="DOIHead"
                android:layout_below="@+id/textViewHead_No_Of_Vacancy" />
            <TextView
                android:id="@+id/textView_date_interview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic" android:text="DOI"
                android:maxLines="1"
                android:maxLength="30"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="120dp"
                android:layout_below="@+id/textView_No_Of_Vacancy"
                />

            <TextView
                android:id="@+id/textViewHead_Contact_Person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="10dp" android:text="Contact Person Head"
                android:layout_below="@+id/textViewHead_date_interview"/>
            <TextView
                android:id="@+id/textView_Contact_Person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:text="Contact Person"

                android:layout_marginTop="10dp"
                android:layout_marginLeft="120dp"
                android:layout_below="@+id/textView_date_interview"

                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>