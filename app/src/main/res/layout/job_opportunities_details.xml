<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="yuvajobopps.niit.org.yuva.Home">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/MyMaterialTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/MyMaterialTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="60dp"

    tools:context="tools:context=broadcaster.niit.org.yuva.beans.SimCardInfoBean"
    android:background="@color/backgroundc"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"

       >

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            card_view:cardCornerRadius="10dp"
            card_view:contentPadding="10dp"
            card_view:cardBackgroundColor="#FFFFFF"


            >
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >
            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/textViewHead_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Company Name"
                    android:layout_alignParentTop="true" />
            </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_below="@+id/linear1"
                    >

                <TextView
                    android:id="@+id/textView_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:text="Name"
                    android:layout_alignParentTop="true"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linear2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                android:layout_below="@+id/linear11"
            >
                <TextView
                    android:id="@+id/textViewHead_Desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Job Description"
                    android:layout_below="@+id/textViewHead_Name" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_below="@+id/linear2"
                    >

                <TextView
                    android:id="@+id/textView_Desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:text="Desc"
                    android:layout_below="@+id/textView_Name"
                    />
            </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/linear12"
                    >
                <TextView
                    android:id="@+id/textViewHead_No_Of_Vacancy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="No. of Vacancies"
                    android:layout_below="@+id/textViewHead_Desc" />
                    </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_below="@+id/linear3"
                    >

                <TextView
                    android:id="@+id/textView_No_Of_Vacancy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:text="NOV"
                    android:layout_below="@+id/textView_Desc"
                    />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/linear13"
                    >
                <TextView
                    android:id="@+id/textViewHead_date_interview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Date of Interview"
                    android:layout_below="@+id/textViewHead_No_Of_Vacancy" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_below="@id/linear4"
                    >

                <TextView
                    android:id="@+id/textView_date_interview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic" android:text="DOI"
                    android:layout_below="@+id/textView_No_Of_Vacancy"
                    />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/linear14"
                    >
                <TextView
                    android:id="@+id/textViewHead_Contact_Person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Contact Person"
                    android:layout_below="@+id/textViewHead_date_interview"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_below="@+id/linear5"
                    >

                <TextView
                    android:id="@+id/textView_Contact_Person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:text="Contact Person"
                    android:layout_below="@+id/textView_date_interview"

                    />
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout></RelativeLayout>

    <include layout="@layout/floating_menu_layout" />
    </android.support.design.widget.CoordinatorLayout>