<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="yuvajobopps.niit.org.yuva.Home">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/MyMaterialTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/MyMaterialTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:background="@color/backgroundc"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:scrollbars="horizontal"
        tools:context="com.example.pawan.studentcardview.MainActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <android.support.v7.widget.CardView

                    xmlns:card_view="http://schemas.android.com/apk/res-auto"

                    android:id="@+id/CardView1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="2dp"
                    card_view:cardCornerRadius="5dp"

                    >

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/s"

                        />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill"
                        android:layout_marginLeft="65dp"
                        android:layout_marginTop="10dp"
                        android:singleLine="false"
                        android:text="Student Name"
                        android:textColor="#660066"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="65dp"
                        android:layout_marginTop="40dp">

                        <TextView
                            android:id="@+id/sName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="hello"
                            android:textSize="15dp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView

                    xmlns:card_view="http://schemas.android.com/apk/res-auto"

                    android:id="@+id/CardView2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/CardView1"
                    android:layout_marginBottom="2dp"
                    card_view:cardCornerRadius="5dp">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="left"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/ro"

                        />


                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill"
                        android:layout_marginLeft="65dp"
                        android:layout_marginTop="10dp"
                        android:singleLine="false"
                        android:text=" Roll Number"
                        android:textColor="#660066"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="65dp"
                        android:layout_marginTop="40dp">

                        <TextView
                            android:id="@+id/sRollNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="hello"
                            android:textSize="15dp" />

                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView

                    xmlns:card_view="http://schemas.android.com/apk/res-auto"

                    android:id="@+id/CardView3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/CardView2"
                    android:layout_marginBottom="2dp"
                    card_view:cardCornerRadius="5dp"

                    >

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/m"

                        />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill"
                        android:layout_marginLeft="65dp"
                        android:singleLine="false"
                        android:text="Mobile Number"
                        android:textColor="#660066"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="65dp"
                        android:layout_marginTop="40dp">

                        <TextView
                            android:id="@+id/sMobileNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="hello"
                            android:textSize="15dp" />

                    </LinearLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView

                    xmlns:card_view="http://schemas.android.com/apk/res-auto"

                    android:id="@+id/CardView4"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/CardView3"
                    android:layout_marginBottom="2dp"
                    card_view:cardCornerRadius="5dp"

                    >

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="320dp"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/email2"

                        />


                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill"
                        android:layout_marginLeft="65dp"
                        android:singleLine="false"
                        android:tag="underline"
                        android:text="Email Id"
                        android:textColor="#660066"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="65dp"
                        android:layout_marginTop="40dp">

                        <TextView
                            android:id="@+id/sEmailId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="hello"
                            android:textSize="15dp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView

                    xmlns:card_view="http://schemas.android.com/apk/res-auto"

                    android:id="@+id/CardView5"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/CardView4"
                    android:layout_marginBottom="2dp"
                    card_view:cardCornerRadius="5dp"

                    >

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="270dp"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/company_name"

                        />


                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill"
                        android:layout_marginLeft="65dp"
                        android:singleLine="false"
                        android:tag="underline"
                        android:text="Company Name"
                        android:textColor="#660066"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="65dp"
                        android:layout_marginTop="40dp">

                        <TextView
                            android:id="@+id/cName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="hello"
                            android:textSize="15dp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView

                    xmlns:card_view="http://schemas.android.com/apk/res-auto"

                    android:id="@+id/CardView6"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/CardView5"
                    android:layout_marginBottom="2dp"
                    card_view:cardCornerRadius="5dp"

                    >

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="270dp"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/haddresss"

                        />


                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill"
                        android:layout_marginLeft="65dp"
                        android:singleLine="false"
                        android:tag="underline"
                        android:text="Company Address"
                        android:textColor="#660066"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="65dp"
                        android:layout_marginTop="40dp">

                        <TextView
                            android:id="@+id/cAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="hello"
                            android:textSize="15dp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView

                    xmlns:card_view="http://schemas.android.com/apk/res-auto"

                    android:id="@+id/CardView7"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/CardView6"
                    android:layout_marginBottom="2dp"
                    card_view:cardCornerRadius="5dp"

                    >

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="270dp"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/profile_image"

                        />


                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill"
                        android:layout_marginLeft="65dp"
                        android:singleLine="false"
                        android:tag="underline"
                        android:text="Primary Person Name"
                        android:textColor="#660066"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="65dp"
                        android:layout_marginTop="40dp">

                        <TextView
                            android:id="@+id/pName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="hello"
                            android:textSize="15dp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView

                    xmlns:card_view="http://schemas.android.com/apk/res-auto"

                    android:id="@+id/CardView8"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/CardView7"
                    android:layout_marginBottom="2dp"
                    card_view:cardCornerRadius="5dp"

                    >

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="270dp"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/hmobile"

                        />


                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill"
                        android:layout_marginLeft="65dp"
                        android:singleLine="false"
                        android:tag="underline"
                        android:text="Primary Contact No.1"
                        android:textColor="#660066"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="65dp"
                        android:layout_marginTop="40dp">

                        <TextView
                            android:id="@+id/pContactNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="hello"
                            android:textSize="15dp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView

                    xmlns:card_view="http://schemas.android.com/apk/res-auto"

                    android:id="@+id/CardView9"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/CardView8"
                    android:layout_marginBottom="2dp"
                    card_view:cardCornerRadius="5dp"

                    >

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="270dp"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/hmobile"

                        />


                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill"
                        android:layout_marginLeft="65dp"
                        android:singleLine="false"
                        android:tag="underline"
                        android:text="Primary Contact No.2"
                        android:textColor="#660066"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="65dp"
                        android:layout_marginTop="40dp">

                        <TextView
                            android:id="@+id/pContactNo2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="hello"
                            android:textSize="15dp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView

                    xmlns:card_view="http://schemas.android.com/apk/res-auto"

                    android:id="@+id/CardView10"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_below="@+id/CardView9"
                    android:layout_marginBottom="2dp"
                    card_view:cardCornerRadius="5dp"

                    >

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="270dp"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/hwebsite"

                        />


                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill"
                        android:layout_marginLeft="65dp"
                        android:singleLine="false"
                        android:tag="underline"
                        android:text="Company Website"
                        android:textColor="#660066"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="65dp"
                        android:layout_marginTop="40dp">

                        <TextView
                            android:id="@+id/pWebsite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="hello"
                            android:textSize="15dp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>


            </RelativeLayout>
        </ScrollView>


    </LinearLayout>

    <include layout="@layout/floating_menu_layout" />


</android.support.design.widget.CoordinatorLayout>
