<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#6699ff"
    android:weightSum="1"
    tools:context="tools:context=broadcaster.niit.org.yuva.OTP_Screen"

    >

    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="-90dp"
        android:src="@drawable/otp1"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sit back and Relax! while we verify your mobile number"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="(Enter the OTP below in case if we fail to detect the SMS automatically)"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_marginTop="45dp"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="123dp"
        android:layout_height="50dp"
        android:inputType="phone"
        android:ems="10"
        android:background="#ffffff"
        android:id="@+id/editTextOTP"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:hint="    Enter OTP"
        android:breakStrategy="high_quality"
        android:capitalize="words"
        android:clickable="true" />

    <Button
        android:layout_width="126dp"
        android:layout_height="50dp"
        android:text="SUBMIT"
        android:layout_marginTop="30dp"
        android:background="#000066"
        android:textColor="#ffffff"
        android:id="@+id/btnOTP"
        android:layout_gravity="center_horizontal" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginTop="30dp"
        android:text="Proceed>>"

        android:textColor="#ffffff"
        android:id="@+id/btnproceed"
        android:background="#6699ff"
        android:layout_gravity="right"
        android:layout_weight="0.12" />

</LinearLayout>